<% include header %>
      <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Blog with Express</a>
          </div>
          <% if (!isLogin) { %>
          <div class="navbar-collapse collapse pull-right" style="margin-top: 7px;">
            <a href="/login"><button type="submit" class="btn btn-success">Login</button></a>
            <a href="/register"><button type="submit" class="btn btn-success">Register</button></a>
          </div>
          </div>
          </div>
          <div class="container text-center">
          <%- messages %>
          </div>
          <% } else { %>
             <div class="dropdown">
              <a href="#" class="dropdown-toggle pull-right" data-toggle="dropdown" style="margin-top: 15px; text-decoration: none;"> <%- user %> <span class="caret"></span></a>
              <ul class="dropdown-menu pull-right" role="menu" style="margin-top: 37px;">
                <li><a href="/posts">New Post</a></li>
                <li><a href="/logout">Logout</a></li>
              </ul>
            </div>
            </div>
            </div>
            <div class="container">
            <table class="table table-hover" data-height="400" data-row-style="rowStyle">
            <thead>
            <tr>
            <th class="col-md-1">Remove</th>
            <th class="col-md-1">Edit</th>
            <th class="col-md-8">Post title</th>
            </tr>
            </thead>
            <tbody>
                <% data.forEach(function(datas) { %>
                <tr>
                    <td><form method="post" action="/delete/<%= datas._id %>"><button><i class="glyphicon glyphicon-trash"></i></button></form></td>
                    <td><form method="post" action="/posts/edit/<%= datas._id %>"><button><i class="glyphicon glyphicon-edit"></i></button></form></td>
                    <td><%- datas.title %></td>
                </tr>
                <% }) %>
            </tbody>
            </table>
            </div>
            
            
             <% } %>
        </div>
      </div>

<% include footer%>